@page
@using FuelManagement.Core.Services.Interface
@using Microsoft.AspNetCore.Mvc.TagHelpers
@model FuelManagement.UI.Pages.User.IndexModel

@{
    ViewData["Title"] = "لیست کاربران";
    Layout = "_Layout";

    var pageSize = Model?.Users?.PageSize ?? 10;
    var startIndex = ((Model?.PageIndex ?? 1) - 1) * pageSize;
    var itemCount = startIndex;
}

<head>
    <style>
        .fade-slow {
            transition: opacity 1s ease-out !important;
        }
    </style>
</head>

@if (!string.IsNullOrEmpty(Model.Msg))
{
    <div aria-live="polite" aria-atomic="true"
         class="toast-container position-fixed bottom-0 end-0 p-3" style="z-index: 1080;">
        <div id="liveToast" class="toast align-items-center text-white bg-success border-0"
             role="alert" aria-live="assertive" aria-atomic="true"
             data-bs-delay="3000" data-bs-autohide="true" data-bs-animation="true">
            <div class="d-flex">
                <div class="toast-body">
                    @Html.Raw(System.Net.WebUtility.UrlDecode(Model.Msg))
                </div>
                <button type="button" class="btn-close btn-close-white me-2 m-auto"
                        data-bs-dismiss="toast" aria-label="Close"></button>
            </div>
        </div>
    </div>

    <script>
        window.addEventListener('DOMContentLoaded', function () {
            var toastEl = document.getElementById('liveToast');
            var toast = bootstrap.Toast.getOrCreateInstance(toastEl);

            toastEl.addEventListener('hide.bs.toast', function () {
                toastEl.classList.add('fade-slow');
            });

            toast.show();
        });
    </script>
}

<div class="side-app">
    <div class="main-container container-fluid">
        <div class="page-header">
            <h1 class="page-title">لیست کاربران</h1>
            <div>
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a href="javascript:void(0)">مدیریت</a></li>
                    <li class="breadcrumb-item active" aria-current="page">لیست کاربران</li>
                </ol>
            </div>
        </div>

        <div class="row row-cards">
            <div class="col-12">
                <div class="card">
                    <div class="card-header d-flex justify-content-between align-items-center">
                        <h3 class="card-title mb-0">لیست کاربران</h3>
                        <div>
                            <a href="/User/RoleToGiveUser" class="btn btn-success">
                                افزودن کارمند
                            </a>
                        </div>
                    </div>
                    <div class="card-body pt-4">
                        <div class="grid-margin">
                            <form method="get" id="SearchSection">
                                <div class="input-group mb-3">
                                    <input type="text" class="form-control" name="SearchString" value="@Model.SearchString" placeholder="جستجو کاربر ...">
                                    <div class="btn-group" role="group" aria-label="First group">
                                        <button type="submit" class="btn btn-primary">جستجو</button>
                                        <a href="/User/Index" class="btn btn-outline-primary">نمایش همه</a>
                                        <div class="btn-group" role="group">
                                            <button id="btnGroupVerticalDrop1" type="button" class="btn btn-primary dropdown-toggle" data-bs-toggle="dropdown" style="width: 9em;">
                                                دریافت فایل
                                            </button>
                                            <ul class="dropdown-menu" aria-labelledby="btnGroupVerticalDrop1">
                                                <li><a class="dropdown-item" href="javascript:void(0)" id="btnExport">خروجی اکسل</a></li>
                                                <li><a class="dropdown-item" href="javascript:void(0)">خروجی Pdf</a></li>
                                            </ul>
                                        </div>
                                    </div>
                                </div>
                            </form>

                            <div class="table-responsive">
                                <table id="data-table" class="table table-bordered text-nowrap table-striped mb-0">
                                    <thead class="border-top">
                                        <tr>
                                            <th class="bg-transparent border-bottom-0" style="width: 5%;">ردیف</th>
                                            <th class="bg-transparent border-bottom-0">نام</th>
                                            <th class="bg-transparent border-bottom-0">نام خانوادگی</th>
                                            <th class="bg-transparent border-bottom-0">جنسیت</th>
                                            <th class="bg-transparent border-bottom-0">کدملی</th>
                                            <th class="bg-transparent border-bottom-0">کدپرسنلی</th>
                                            <th class="bg-transparent border-bottom-0">کارمند/شهروند</th>
                                            <th class="bg-transparent border-bottom-0">تاریخ ثبت نام</th>
                                            <th class="bg-transparent border-bottom-0" style="width: 5%;">عملیات</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @if (Model.Users != null && Model.Users.Count > 0)
                                        {
                                            foreach (var item in Model.Users)
                                            {
                                                itemCount++;
                                                <tr class="border-bottom">
                                                    <td class="text-center">@itemCount</td>
                                                    <td>@item.FirstName</td>
                                                    <td>@item.LastName</td>
                                                    <td>@item.Sex</td>
                                                    <td>@item.NationalCode</td>
                                                    <td>@item.PersonalCode</td>
                                                    <td>
                                                        @if (item.IsEmployeeField)
                                                        {
                                                            <span class="badge bg-success-transparent rounded-pill text-success p-2 px-3">کارمند</span>
                                                        }
                                                        else
                                                        {
                                                            <span class="badge bg-danger-transparent rounded-pill text-danger p-2 px-3">شهروند</span>
                                                        }
                                                    </td>
                                                    <td>@item.RegisteriDate_fa</td>
                                                    <td>
                                                        <div class="g-2">
                                                            <a asp-page="/User/Profile" asp-route-id="@item.Id" class="btn text-success btn-sm" data-bs-toggle="tooltip" title="پروفایل کاربر">
                                                                <span class="fe fe-user fs-14"></span>
                                                            </a>
                                                            <a asp-page="/User/EditUser" asp-route-userId="@item.Id" class="btn text-primary btn-sm" data-bs-toggle="tooltip" title="تخصیص نقش به کاربر">
                                                                <span class="fe fe-edit fs-14"></span>
                                                            </a>
                                                        </div>
                                                    </td>
                                                </tr>
                                            }
                                        }
                                        else
                                        {
                                            <tr>
                                                <td colspan="9" class="text-center">کاربری یافت نشد.</td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>

                                <!-- صفحه‌بندی -->
                                <nav aria-label="Page navigation" class="mt-3">
                                    <ul class="pagination">
                                        <li class="page-item @(Model.Users.HasPreviousPage ? "" : "disabled")">
                                            <a class="page-link" href="?pageIndex=@(Model.PageIndex - 1)&SearchString=@Model.SearchString">قبلی</a>
                                        </li>
                                        @for (int i = 1; i <= Model.Users.TotalPages; i++)
                                        {
                                            <li class="page-item @(i == Model.PageIndex ? "active" : "")">
                                                <a class="page-link" href="?pageIndex=@i&SearchString=@Model.SearchString">@i</a>
                                            </li>
                                        }
                                        <li class="page-item @(Model.Users.HasNextPage ? "" : "disabled")">
                                            <a class="page-link" href="?pageIndex=@(Model.PageIndex + 1)&SearchString=@Model.SearchString">بعدی</a>
                                        </li>
                                    </ul>
                                </nav>
                                <!-- پایان صفحه‌بندی -->

                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/xlxs.full.min.js"></script>
    <script>
        document.addEventListener('DOMContentLoaded', function () {
            const btn = document.getElementById('btnExport');
            const tbl = document.getElementById('data-table');
            if (!btn || !tbl) return;

            btn.addEventListener('click', function () {
                const wb = XLSX.utils.table_to_book(tbl, { sheet: "Sheet1" });
                XLSX.writeFile(wb, 'Users.xlsx');
            });
        });
    </script>
}
