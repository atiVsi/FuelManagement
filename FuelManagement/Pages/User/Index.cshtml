@page
@using FuelManagement.Core.Services.Interface
@using Microsoft.AspNetCore.Mvc.TagHelpers
@model FuelManagement.UI.Pages.User.IndexModel
@{
    
    ViewData["Title"] = "لیست کاربران";
    Layout = "_Layout";
   
    //بخش صفحه بندی
    var startIndex = (Model.PageIndex - 1) * Model.Users.PageSize;
    var itemCount = startIndex;
    //var itemCount = 0;
}

<head>
    <style>
        .fade-slow {
            transition: opacity 1s ease-out !important;
        }
    </style>
</head>



@*این بخش برای آلرت های صفحه هست*@

@if (!string.IsNullOrEmpty(Model.Msg))
{
    <div aria-live="polite" aria-atomic="true"
         class="toast-container position-fixed bottom-0 end-0 p-3" style="z-index: 1080;">
        <div id="liveToast" class="toast align-items-center text-white bg-success border-0"
             role="alert" aria-live="assertive" aria-atomic="true"
             data-bs-delay="3000" data-bs-autohide="true" data-bs-animation="true">
            <div class="d-flex">
                <div class="toast-body">
                    @Html.Raw(System.Net.WebUtility.UrlDecode(Model.Msg))
                </div>
                <button type="button" class="btn-close btn-close-white me-2 m-auto"
                        data-bs-dismiss="toast" aria-label="Close"></button>
            </div>
        </div>
    </div>

    <script>
        window.addEventListener('DOMContentLoaded', function () {
            var toastEl = document.getElementById('liveToast');
            var toast = bootstrap.Toast.getOrCreateInstance(toastEl);

            // اضافه کردن کلاس برای افکت آرام‌تر قبل از مخفی شدن
            toastEl.addEventListener('hide.bs.toast', function () {
                toastEl.classList.add('fade-slow');
            });

            toast.show();
        });
    </script>
}



@*بخش اصلی صفحه*@
<div class="side-app">
    <div class="main-container container-fluid">
        <div class="page-header">
            <h1 class="page-title">لیست نقش ها</h1>
            <div>
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a href="javascript:void(0)">مدیریت</a></li>
                    <li class="breadcrumb-item active" aria-current="page">لیست کاربران</li>
                </ol>
            </div>
        </div>


        <div class="row row-cards">
            <div class="col-12 col-sm-12">
                <div class="card">
                    <div class="card-header d-flex justify-content-between align-items-center">
                        <h3 class="card-title mb-0">لیست کاربران</h3>
                        <div>
                            <a href="/User/RoleToGiveUser" class="btn btn-success">
                                افزودن کارمند
                            </a>
                        </div>

                    </div>
                    <div class="card-body pt-4">
                        <div class="grid-margin">
                            <div class="">
                                <div class="panel panel-primary">
                                    <div class="tab-menu-heading border-0 p-0">
                                        <div class="tabs-menu1">
                                        </div>
                                    </div>
                                    <div class="panel-body tabs-menu-body border-0 pt-0">
                                        <div class="tab-content">
                                            <div class="tab-pane active" id="tab5">
                                                <div class="table-responsive">
                                                    <div class="row">
                                                        <div class="col-12">
                                                            <div id="SearchSection">
                                                                <form method="get">
                                                                    <div class="input-group mb-3">
                                                                        <input type="text" class="form-control" id="search" name="SearchString" value="@Model.SearchString" placeholder="جستجو کاربر ...">
                                                                        <div class="btn-group" role="group" aria-label="First group">
                                                                            <button type="submit" class="btn btn-primary">جستجو</button>

