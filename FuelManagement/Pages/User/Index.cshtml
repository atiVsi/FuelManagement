                                                           class="table table-bordered text-nowrap table-striped mb-0">
                                                        <thead class="border-top">
                                                            <tr>
                                                                <th class="bg-transparent border-bottom-0"
                                                                    style="width: 5%;">ردیف</th>
                                                                <th class="bg-transparent border-bottom-0">
                                                                    نام
                                                                </th>

                                                                <th class="bg-transparent border-bottom-0">
                                                                    نام خانوادگی
                                                                </th>

                                                                <th class="bg-transparent border-bottom-0">
                                                                    جنسیت
                                                                </th>

                                                                <th class="bg-transparent border-bottom-0">
                                                                    کدملی
                                                                </th>

                                                                <th class="bg-transparent border-bottom-0">
                                                                    کدپرسنلی
                                                                </th>
                                                                <th class="bg-transparent border-bottom-0">
                                                                    کارمند/شهروند
                                                                </th>
                                                                <th class="bg-transparent border-bottom-0">
                                                                    تاریخ ثبت نام
                                                                </th>
                                                               

                                                                <th class="bg-transparent border-bottom-0"
                                                                    style="width: 5%;">عملیات</th>
                                                            </tr>
                                                        </thead>
                                                        <tbody>
                                                            @if (Model.Users != null)
                                                            {
                                                                @foreach (var item in Model.Users)
                                                                {
                                                                    itemCount += 1;
                                                                    <tr class="border-bottom">
                                                                        <td class="text-center">
                                                                            <div class="mt-0 mt-sm-2 d-block">
                                                                                <h6 class="mb-0 fs-14 fw-semibold">
                                                                                    @itemCount
                                                                                </h6>
                                                                            </div>
                                                                        </td>
                                                                        <td>
                                                                            <div class="d-flex">
                                                                        
                                                                                <div class="ms-3 mt-0 mt-sm-2 d-block">
                                                                                    <h6 class="mb-0 fs-14 fw-semibold">
                                                                                        @item.FirstName
                                                                                    </h6>
                                                                                </div>
                                                                            </div>
                                                                        </td>


                                                                        <td>
                                                                            <div class="d-flex">

                                                                                <div class="ms-3 mt-0 mt-sm-2 d-block">
                                                                                    <h6 class="mb-0 fs-14 fw-semibold">
                                                                                        @item.LastName
                                                                                    </h6>
                                                                                </div>
                                                                            </div>
                                                                        </td>

                                                                        <td>
                                                                            <div class="d-flex">

                                                                                <div class="ms-3 mt-0 mt-sm-2 d-block">
                                                                                    <h6 class="mb-0 fs-14 fw-semibold">
                                                                                        @item.Sex
                                                                                    </h6>
                                                                                </div>
                                                                            </div>
                                                                        </td>

                                                                        <td>
                                                                            <div class="d-flex">

                                                                                <div class="ms-3 mt-0 mt-sm-2 d-block">
                                                                                    <h6 class="mb-0 fs-14 fw-semibold">
                                                                                        @item.NationalCode
                                                                                    </h6>
                                                                                </div>
                                                                            </div>
                                                                        </td>

                                                                         <td>
                                                                            <div class="d-flex">
                                                                        
                                                                                <div class="ms-3 mt-0 mt-sm-2 d-block">
                                                                                    <h6 class="mb-0 fs-14 fw-semibold">
                                                                                        @item.PersonalCode
                                                                                    </h6>
                                                                                </div>
                                                                            </div>
                                                                        </td>

                                                                        <td>
                                                                            <div class="d-flex">

                                                                                <div class="ms-3 mt-0 mt-sm-2 d-block">
                                                                                    @if (item.IsEmployeeField )
                                                                                    {
                                                                                        <span class="badge bg-success-transparent rounded-pill text-success p-2 px-3">کارمند</span>

                                                                                    }
                                                                                    else
                                                                                    {
                                                                                        <span class="badge bg-danger-transparent rounded-pill text-danger p-2 px-3">شهروند</span>
                                                                                    }
                                                                                </div>
                                                                            </div>
                                                                        </td>
                                                                        <td>
                                                                            <div class="d-flex">

                                                                                <div class="ms-3 mt-0 mt-sm-2 d-block">
                                                                                    <h6 class="mb-0 fs-14 fw-semibold">
                                                                                        @item.RegisteriDate_fa
                                                                                    </h6>
                                                                                </div>
                                                                            </div>
                                                                        </td>
                                            
                                                                        <td>
                                                                            <div class="g-2">

                                                                                <a asp-page="/User/Profile" asp-route-id="@item.Id"
                                                                                   class="btn text-success btn-sm"
                                                                                   data-bs-toggle="tooltip" title="پروفایل کاربر">
                                                                                    <span class="fe fe-user fs-14"></span>
                                                                                </a>

                                                                                <a asp-page="/User/EditUser" asp-route-userId="@item.Id" class="btn text-primary btn-sm"
                                                                                   data-bs-toggle="tooltip"
                                                                                   data-bs-original-title="تخصیص نقش به کاربر">
                                                                                    <span class="fe fe-edit fs-14"></span>
                                                                                </a>
                                                                             
                                                                            </div>
                                                                        </td>
                                                                    </tr>


                                                                


                                                                }
                                                            }

                                                        </tbody>
                                                    </table>
                                                   
                                                </div>




                                                <!-- 🟦 بلوک صفحه‌بندی -->
                                                <nav aria-label="Page navigation" class="mt-3">
                                                    <ul class="pagination">
                                                        <li class="page-item page-prev @(Model.Users.HasPreviousPage ? "" : "disabled")">
                                                            <a class="page-link" href="?pageIndex=@(Model.PageIndex - 1)&searchString=@Model.SearchString">قبلی</a>
                                                            
                                                        </li>

                                                        @for (int i = 1; i <= Model.Users.TotalPages; i++)
                                                        {
                                                            <li class="page-item @(i == Model.PageIndex ? "active" : "")">
                                                                <a class="page-link" href="?pageIndex=@i&searchString=@Model.SearchString">@i</a>
                                                               
                                                            </li>
                                                        }

                                                        <li class="page-item page-next @(Model.Users.HasNextPage ? "" : "disabled")">
                                                            <a class="page-link" href="?pageIndex=@(Model.PageIndex + 1)&searchString=@Model.SearchString">بعدی</a>
                                                          
                                                        </li>
                                                    </ul>
                                                </nav>
                                                <!-- 🟦 پایان بلوک صفحه‌بندی -->

                                            </div>

                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

    </div>
</div>

@section Scripts {


    <script src="~/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/xlxs.full.min.js"></script>
    <script>
        document.addEventListener('DOMContentLoaded', function () {
            const btn = document.getElementById('btnExport');
            const tbl = document.getElementById('data-table');
            if (!btn || !tbl) {
                console.error("Element not found:", { btn, tbl });
                return;
            }
            btn.addEventListener('click', function () {
                const wb = XLSX.utils.table_to_book(tbl, { sheet: "Sheet1" });
                XLSX.writeFile(wb, 'Users.xlsx');
            });
        });
    </script>
}
