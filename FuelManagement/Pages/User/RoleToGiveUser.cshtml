@page
@model FuelManagement.UI.Pages.User.RoleToGiveUserModel
@{
    ViewData["Title"] = "افزودن/ویرایش نقش کاربر";
}

<h2>@ViewData["Title"]</h2>

@if (!string.IsNullOrEmpty(Model.Msg))
{
    <div class="alert alert-success">@Model.Msg</div>
}

<form method="post">
    <div class="form-group">
        <label asp-for="user.UserName">نام کاربری</label>
        <input asp-for="user.UserName" class="form-control" />
        <span asp-validation-for="user.UserName" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="user.Firstname">نام</label>
        <input asp-for="user.Firstname" class="form-control" />
        <span asp-validation-for="user.Firstname" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="user.LastName">نام خانوادگی</label>
        <input asp-for="user.LastName" class="form-control" />
        <span asp-validation-for="user.LastName" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="user.NationalCodeField">کد ملی</label>
        <input asp-for="user.NationalCodeField" class="form-control" />
        <span asp-validation-for="user.NationalCodeField" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="user.MobilePhoneNumber">شماره همراه</label>
        <input asp-for="user.MobilePhoneNumber" class="form-control" />
        <span asp-validation-for="user.MobilePhoneNumber" class="text-danger"></span>
    </div>

    @* <div class="form-group">
        <label>نقش‌ها</label>
        <select asp-for="user.SelectedRoles" class="form-control" multiple="multiple">
            @foreach (var role in (List<FuelManagement.Core.Dtos.UserDto.RoleToGiveUser>)ViewData["Roles"])
            {
                <option value="@role.RoleId" @(Model.user.SelectedRoles?.Contains(role.RoleId) == true ? "selected" : "")>@role.RoleName</option>
            }
        </select>
    </div> *@

    <button type="submit" class="btn btn-primary">ثبت</button>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
