@page
@using FuelManagement.Core.Services.Interface
@using Microsoft.AspNetCore.Mvc.TagHelpers
@model FuelManagement.UI.Pages.Role.IndexModel
@{
    ViewData["Title"] = "نقش و دسترسی ها";
    Layout = "_Layout";
   
    var startIndex = (Model.PageIndex - 1) * Model.Roles.PageSize;
    var itemCount = startIndex;
}

<head>
    <style>
        .fade-slow {
            transition: opacity 1s ease-out !important;
        }
    </style>
</head>
   


@if (!string.IsNullOrEmpty(Model.Msg))
{
    <div aria-live="polite" aria-atomic="true"
         class="toast-container position-fixed bottom-0 end-0 p-3" style="z-index: 1080;">
        <div id="liveToast" class="toast align-items-center text-white bg-success border-0"
             role="alert" aria-live="assertive" aria-atomic="true"
             data-bs-delay="3000" data-bs-autohide="true" data-bs-animation="true">
            <div class="d-flex">
                <div class="toast-body">
                    @Html.Raw(System.Net.WebUtility.UrlDecode(Model.Msg))
                </div>
                <button type="button" class="btn-close btn-close-white me-2 m-auto"
                        data-bs-dismiss="toast" aria-label="Close"></button>
            </div>
        </div>
    </div>

    <script>
        window.addEventListener('DOMContentLoaded', function () {
            var toastEl = document.getElementById('liveToast');
            var toast = bootstrap.Toast.getOrCreateInstance(toastEl);

            // اضافه کردن کلاس برای افکت آرام‌تر قبل از مخفی شدن
            toastEl.addEventListener('hide.bs.toast', function () {
                toastEl.classList.add('fade-slow');
            });

            toast.show();
        });
    </script>
}


<div class="side-app">
    <div class="main-container container-fluid">
        <div class="page-header">
            <h1 class="page-title">لیست نقش ها</h1>
            <div>
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a href="javascript:void(0)">مدیریت</a></li>
                    <li class="breadcrumb-item active" aria-current="page">لیست نقش ها</li>
                </ol>
            </div>
        </div>


        <div class="row row-cards">
            <div class="col-12 col-sm-12">
                <div class="card">
                    <div class="card-header d-flex justify-content-between align-items-center">
                        <h3 class="card-title mb-0">لیست نقش ها</h3>
                        <div>
                            <a href="/Role/CreateRole" class="btn btn-success">
                                افزودن نقش
                            </a>
                        </div>

                    </div>
                    <div class="card-body pt-4">
                        <div class="grid-margin">
                            <div class="">
                                <div class="panel panel-primary">
                                    <div class="tab-menu-heading border-0 p-0">
                                        <div class="tabs-menu1">
                                        </div>
                                    </div>
                                    <div class="panel-body tabs-menu-body border-0 pt-0">
                                        <div class="tab-content">
                                            <div class="tab-pane active" id="tab5">
                                                <div class="table-responsive">
                                                    <div class="row ">
                                                        <div class="col-12">
                                                            <div id="SearchSection">
                                                                <form method="get">
                                                                    <div class="input-group mb-3">
                                                                        <input type="text" class="form-control" id="search" name="SearchString" placeholder="جستجو عنوان ...">
                                                                        <div class="btn-group" role="group" aria-label="First group">
                                                                            <button type="submit" class="btn btn-primary">جستجو</button>
                                                                            <a href="/Role/Index" class="btn btn-outline-primary">نمایش همه</a>
                                                                            <div class="btn-group" role="group" style="text-align:center;">
                                                                                <button id="btnGroupVerticalDrop1" type="button" class="btn btn-primary dropdown-toggle show" data-bs-toggle="dropdown" aria-expanded="false" style="width: 9em;">
                                                                                    دریافت فایل
                                                                                </button>
@*                                                                                <ul class="dropdown-menu " style="position: absolute; inset: 0px auto auto 0px; margin: 0px; transform: translate(0px, 40px);" data-popper-placement="bottom-start">
*@
                                                                                <ul class="dropdown-menu"
                                                                                    aria-labelledby="btnGroupVerticalDrop1">
                                                                                    <li><a class="dropdown-item" href="javascript:void(0)" id="btnExport">خروجی اکسل</a></li>
                                                                                    <li><a class="dropdown-item" href="javascript:void(0)">خروجی Pdf</a></li>
                                                                                </ul>
                                                                            </div>
                                                                        </div>
                                                                    </div>
                                                                </form>
                                                            </div>
                                                        </div>
                                                    </div>
                                                       

                                                      
                                                
                                           
                                                    
                                                    
                                                   

                                                    <table id="data-table"
                                                           class="table table-bordered text-nowrap table-striped mb-0">
                                                        <thead class="border-top">
                                                            <tr>
                                                                <th class="bg-transparent border-bottom-0"
                                                                    style="width: 5%;">ردیف</th>
                                                                <th class="bg-transparent border-bottom-0">
                                                                    عنوان
                                                                </th>

                                                                <th class="bg-transparent border-bottom-0"
                                                                    style="width: 10%;">فعال/غیرفعال</th>

                                                                <th class="bg-transparent border-bottom-0"
                                                                    style="width: 5%;">عملیات</th>
                                                            </tr>
                                                        </thead>
                                                        <tbody>
                                                            @if (Model.Roles != null)
                                                            {
                                                                @foreach (var item in Model.Roles)
                                                                {
                                                                    itemCount += 1;
                                                                    <tr class="border-bottom">
                                                                        <td class="text-center">
                                                                            <div class="mt-0 mt-sm-2 d-block">
                                                                                <h6 class="mb-0 fs-14 fw-semibold">
                                                                                    @itemCount
                                                                                </h6>
                                                                            </div>
                                                                        </td>
                                                                        <td>
                                                                            <div class="d-flex">
                                                                                @*            <span class="avatar bradius"
                                                                        style="background-image: url(../assets/images/orders/10.jpg)"></span>*@
                                                                                <div class="ms-3 mt-0 mt-sm-2 d-block">
                                                                                    <h6 class="mb-0 fs-14 fw-semibold">
                                                                                        @item.RoleTitle
                                                                                    </h6>
                                                                                </div>
                                                                            </div>
                                                                        </td>
                                                                        <td>
                                                                            <div class="mt-sm-1 d-block">
                                                                                @if (!item.IsDelete)
                                                                                {
                                                                                    <span class="badge bg-success-transparent rounded-pill text-success p-2 px-3">فعال</span>

                                                                                }
                                                                                else
                                                                                {
                                                                                    <span class="badge bg-danger-transparent rounded-pill text-danger p-2 px-3">غیرفعال</span>
                                                                                }
                                                                            </div>
                                                                        </td>
                                                                        <td>
                                                                            <div class="g-2">

                                                                                <a href="/Role/RoleDetail?id=@item.Id"
                                                                                   class="btn text-success btn-sm"
                                                                                   data-bs-toggle="tooltip" title="مشاهده جزئیات">
                                                                                    <span class="fe fe-eye fs-14"></span>
                                                                                </a>



                                                                                <a href="/Role/EditRole?id=@item.Id" class="btn text-primary btn-sm"
                                                                                   data-bs-toggle="tooltip"
                                                                                   data-bs-original-title="Edit">
                                                                                    <span class="fe fe-edit fs-14"></span>
                                                                                </a>
                                                                                <a class="btn text-danger btn-sm"
                                                                                   data-bs-toggle="modal"
                                                                                   data-bs-target="#deleteModal_@item.Id">
                                                                                    <span class="fe fe-trash-2 fs-14"></span>
                                                                                </a>
                                                                            </div>
                                                                        </td>
                                                                    </tr>


                                                                    <div class="modal fade" id="deleteModal_@item.Id" tabindex="-1" aria-labelledby="deleteModalLabel" aria-hidden="true">
                                                                        <div class="modal-dialog">
                                                                            <form method="post" asp-page-handler="Delete">
                                                                                <input type="hidden" name="id" value="@item.Id" />
                                                                                <div class="modal-content">
                                                                                    <div class="modal-header">
                                                                                        <h5 class="modal-title">حذف نقش</h5>
                                                                                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="بستن"></button>
                                                                                    </div>
                                                                                    <div class="modal-body">
                                                                                        آیا مطمئن هستید که می‌خواهید نقش <strong class="badge bg-danger">@item.RoleTitle</strong> را حذف کنید؟
                                                                                    </div>
                                                                                    <div class="modal-footer">
                                                                                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">لغو</button>
                                                                                        <button type="submit" class="btn btn-danger">حذف</button>
                                                                                    </div>
                                                                                </div>
                                                                            </form>
                                                                        </div>
                                                                    </div>


                                                                }
                                                            }

                                                        </tbody>
                                                    </table>
                                                    <div class="d-flex justify-content-between align-items-center mt-3">
                                                        <span class="text-muted">
                                                            تعداد کل آیتم‌ها: <strong>@Model.Roles.TotalCount</strong>
                                                        </span>
                                                    </div>
                                                </div>




                                                <!-- 🟦 بلوک صفحه‌بندی -->
                                                <nav aria-label="Page navigation" class="mt-3">
                                                    <ul class="pagination">
                                                        <li class="page-item page-prev @(Model.Roles.HasPreviousPage ? "" : "disabled")">
                                                            <a class="page-link" href="?pageIndex=@(Model.PageIndex - 1)&searchString=@Model.SearchString">قبلی</a>
                                                            @*<a class="page-link" href="?PageIndex=@(Model.PageIndex - 1)" tabindex="-1">قبلی</a>*@
                                                        </li>

                                                        @for (int i = 1; i <= Model.Roles.TotalPages; i++)
                                                        {
                                                            <li class="page-item @(i == Model.PageIndex ? "active" : "")">
                                                                <a class="page-link" href="?pageIndex=@i&searchString=@Model.SearchString">@i</a>
                                                               @* <a class="page-link" href="?PageIndex=@i">@i</a>*@
                                                            </li>
                                                        }

                                                        <li class="page-item page-next @(Model.Roles.HasNextPage ? "" : "disabled")">
                                                            <a class="page-link" href="?pageIndex=@(Model.PageIndex + 1)&searchString=@Model.SearchString">بعدی</a>
                                                            @*<a class="page-link" href="?PageIndex=@(Model.PageIndex + 1)">بعدی</a>*@
                                                        </li>
                                                    </ul>
                                                </nav>
                                                <!-- 🟦 پایان بلوک صفحه‌بندی -->

                                            </div>

                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

    </div>
</div>

@section Scripts {


   <script src="~/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/xlxs.full.min.js"></script>
    <script>
        document.addEventListener('DOMContentLoaded', function () {
            const btn = document.getElementById('btnExport');
            const tbl = document.getElementById('data-table');
            if (!btn || !tbl) {
                console.error("Element not found:", { btn, tbl });
                return;
            }
            btn.addEventListener('click', function () {
                const wb = XLSX.utils.table_to_book(tbl, { sheet: "Sheet1" });
                XLSX.writeFile(wb, 'Roles.xlsx');
            });
        });
    </script>
}