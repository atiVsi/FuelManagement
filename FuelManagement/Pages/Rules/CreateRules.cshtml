@page
@model FuelManagement.UI.Pages.Rules.CreateRulesModel
@{
    ViewData["Title"] = "افزودن آیین نامه";
    Layout = "_Layout";
}

<div class="side-app">

    <div class="main-container container-fluid">


        <div class="page-header">
            <h1 class="page-title"> افزودن آیین نامه </h1>
            <div>
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a asp-page="/Rules/Index">لیست آیین نامه ها </a></li>
                    <li class="breadcrumb-item active" aria-current="page"> افزودن آیین نامه </li>
                </ol>
            </div>
        </div>



        <div class="row row-cards">
            <div class="col-12 col-sm-12">

                <div class="card">
                    <div class="card-header">
                        <h4 class="card-title">افزودن آیین نامه</h4>
                    </div>
                    <div class="card-body">
                        <form class="form-horizontal" method="post" enctype="multipart/form-data">

                            <div class="row">
                                <div class="form-group col-6">
                                    <label asp-for="CreateRule.Title" class="control-label">عنوان</label>
                                    <input asp-for="CreateRule.Title" class="form-control" placeholder="عنوان " />
                                    <span asp-validation-for="CreateRule.Title" class="text-danger"></span>
                                </div>



                                <div class="form-group col-6">
                                    <label asp-for="CreateRule.RuleImage" class="control-label">تصویر </label>
                                    <input asp-for="CreateRule.RuleImage" class="form-control" type="file" multiple id="newsImageInput" />
                                    <span asp-validation-for="CreateRule.RuleImage" class="text-danger"></span>

                                    <!-- کانتینر برای نمایش پیش‌نمایش‌ها -->
                                    <div class="mt-2 d-flex flex-wrap gap-2" id="previewContainer"></div>
                                </div>

                            </div>

                            <div class="row">
                                <div class="form-group col-12">
                                    <label asp-for="CreateRule.Description" class="control-label">توضیحات</label>
                                    <textarea asp-for="CreateRule.Description" class="form-control" rows="5" placeholder="توضیحات"></textarea>
                                    <span asp-validation-for="CreateRule.Description" class="text-danger"></span>
                                </div>
                            </div>


                            <input type="hidden" name="bRedirect" value="true" />

                            <div class="mb-0 mt-4 row justify-content-end">
                                <div class="col-md-9">
                                    <button class="btn btn-primary" type="submit">ثبت</button>
                                    <a class="btn btn-secondary" href="/Rules/Index">انصراف</a>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>            <!-- COL-END -->
        </div>
        <!-- ROW CLOSED -->
    </div>
    <!-- CONTAINER CLOSED -->
</div>
@section Scripts
    {
   


    <script>


        document.addEventListener('DOMContentLoaded', function () {
            const input = document.getElementById("newsImageInput");
            const container = document.getElementById("previewContainer");

            if (!input || !container) return;

            input.addEventListener("change", function (event) {
                const files = event.target.files;
                container.innerHTML = "";

                Array.from(files).forEach(file => {
                    if (file.type.startsWith("image/")) {
                        const reader = new FileReader();
                        reader.onload = function (e) {
                            const img = document.createElement("img");
                            img.src = e.target.result;
                            img.style.maxWidth = "150px";
                            img.style.maxHeight = "100px";
                            img.style.objectFit = "cover";
                            img.style.border = "1px solid #ddd";
                            img.style.padding = "3px";
                            img.style.marginRight = "10px";
                            img.style.marginBottom = "10px";

                            container.appendChild(img);
                        };
                        reader.readAsDataURL(file);
                    }
                });
            });
        });
    </script>

    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}